    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ManageBillsActivities.AddABillActivity" />
        <activity android:name=".ManageBillsActivities.RemoveABillActivity" />
        <activity android:name=".ManageIncomesActivities.AddIncomeActivity" />
        <activity android:name=".ManageIncomesActivities.RemoveIncomeActivity"></activity>
    </application>

</manifest>